server {
  listen       ${PORT};
  server_name  _;
  root /usr/share/nginx/html;
  index index.html;

  # --- CORS (edit as needed) ---
  add_header Access-Control-Allow-Origin "*" always;
  add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
  add_header Access-Control-Allow-Headers "Content-Type, Authorization, Range" always;
  add_header Access-Control-Expose-Headers "Content-Length, Content-Range, Accept-Ranges" always;

  if ($request_method = OPTIONS) {
    add_header Access-Control-Allow-Origin "*";
    add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
    add_header Access-Control-Allow-Headers "Content-Type, Authorization, Range";
    add_header Content-Length 0;
    add_header Content-Type text/plain;
    return 204;
  }

  # --- Static caching example ---
  location ~* \.(js|css|png|jpg|jpeg|gif|svg|ico|woff2?)$ {
    expires 7d;
    add_header Cache-Control "public";
  }

  # --- Directory listing (optional) ---
  #location / {
    autoindex on;   # uncomment to show file listing
  #}
}
